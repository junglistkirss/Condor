<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <PackageId>Condor.Generator.Utils</PackageId>
    <Version>0.0.1</Version>
    <Authors>Christian Bourbier</Authors>
    <PackageDescription>Utilities for code generation (Templating and Code Info)</PackageDescription>
    <RepositoryUrl>https://github.com/junglistkirss/Condor</RepositoryUrl>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <PackageLicenseFile>../LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../LICENSE" Pack="true" PackagePath="\" />
    <None Include="readme.md" Pack="true" PackagePath="\" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.11.0" PrivateAssets="all" IncludeAssets="runtime; build; native; contentfiles; analyzers; buildtransitive" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" PrivateAssets="all" />
    <PackageReference Include="RobinMustache" Version="0.0.8" PrivateAssets="all" GeneratePathProperty="true" />
    <PackageReference Include="RobinMustache.Abstractions" Version="0.0.4" PrivateAssets="all" GeneratePathProperty="true" />
    <PackageReference Include="RobinMustache.Generators.Accessor" Version="0.0.1" OutputItemType="Analyzer" ReferenceOutPutAssembly="false" />
  </ItemGroup>

  <ItemGroup>
    <None Update="tools\**" Pack="true" PackagePath="" />
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(PkgRobinMustache)\lib\netstandard2.0\RobinMustache.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(PkgRobinMustache_Abstractions)\lib\netstandard2.0\RobinMustache.Abstractions.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

  <PropertyGroup>
    <GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPaths</GetTargetPathDependsOn>
  </PropertyGroup>

  <Target Name="GetDependencyTargetPaths">
    <ItemGroup>
      <TargetPathWithTargetPlatformMoniker Include="$(PkgRobinMustache)\lib\netstandard2.0\RobinMustache.dll" IncludeRuntimeDependency="false" />
      <TargetPathWithTargetPlatformMoniker Include="$(PkgRobinMustache_Abstractions)\lib\netstandard2.0\RobinMustache.Abstractions.dll" IncludeRuntimeDependency="false" />
    </ItemGroup>
  </Target>

</Project>
